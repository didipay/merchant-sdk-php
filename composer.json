{
  "description": "merchant php sdk",
  "name": "didipay/merchant-php-sdk",
  "type": "library",
  "homepage": "https://didipay.didiglobal.com/developer/docs/en/",
  "license": "MIT",
  "authors": [
    {
      "name": "fangxiaohai",
      "email": "fangxiaohai@didiglobal.com"
    }
  ],
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {"DidiPay\\": [
      "src"
    ]}
  },
  "autoload-dev": {
    "psr-4": {"DidiPay\\": [
      "src"
    ]}
  },
  "support": {
    "wiki": "https://github.com/didipay/merchant-sdk-php"
  },
  "require": {
    "php": ">=5.6.0",
    "ext-openssl": "*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.5.0",
    "brainmaestro/composer-git-hooks": "^2.8",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer check-style",
        "composer phpstan",
        "composer test"
      ],
      "pre-push": [
        "composer check-style"
      ],
      "config": {
        "stop-on-failure": [
          "pre-commit",
          "pre-push"
        ]
      }
    }
  },
  "scripts": {
    "post-merge": "composer install",
    "phpstan": "phpstan analyse --memory-limit=-1",
    "check-style": "php-cs-fixer fix --using-cache=no --diff --dry-run --allow-risky=yes --ansi",
    "fix-style": "php-cs-fixer fix --using-cache=no --allow-risky=yes --ansi",
    "test": "phpunit --colors"
  }
}